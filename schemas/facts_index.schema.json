{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "facts_index",
  "type": "object",
  "required": ["run_id", "generated_at", "facts"],
  "properties": {
    "run_id": { "type": "string" },
    "generated_at": { "type": "string" },
    "facts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["event_id", "evidences"],
        "properties": {
          "event_id": { "type": "string" },
          "title": { "type": "string" },
          "topic": { "type": "string" },
          "date": { "type": "string" },
          "evidences": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["url", "credibility_tier", "retrieval_ts"],
              "properties": {
                "url": { "type": "string" },
                "evidence_quote": { "type": "string" },
                "credibility_tier": { "type": "string" },
                "retrieval_ts": { "type": "string" }
              }
            }
          }
        }
      }
    }
  }
}
